<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title><%= title %> </title>
  </head>
  <body>
    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">PC World</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/addStore">Store</a>
            <a class="nav-link active" aria-current="page" href="/staff">Staff</a>
            <a class="nav-link" href="/products">Products</a>
            <a class="nav-link" href="/services">Services</a>
          </div>
        </div>
      </div>
    </nav>

    <h1> Enter new staff details. </h1>
    <form class="" action="staff/add" method="post">
      <label for="staffID">Enter staff ID:</label>
      <input type="text" name="staffID"/>
      <br>
      <label for="staffType">Enter job name:</label>
      <input type="text" name="staffType">
      <br>
      <label for="fName">Fist name:</label>
      <input type="text" name="fName">
      <br>
      <label for="lName">Last name:</label>
      <input type="text" name="lName">
      <br>
      <label for="hourlyPay">Pay per hour :€</label>
      <input type="text" name="hourlyPay">
      <br>
      <label for="StoreID">Store ID: </label>
      <input type="text" name="storeID">
      <button type="submit" name="button">Submit</button>
    </form>
    <% for(var i =0; i < staff.length; i++) { %>
      <p>Staff ID: <%= staff[i].staffID %></p>
      <p>Job: <%= staff[i].staffType %></p>
      <p>First Name: <%= staff[i].fName %></p>
      <p>Last Name: <%= staff[i].lName %></p>
      <p>Pay per hour: €<%= staff[i].hourlyPay %></p>
      <p>Store ID: <%= staff[i].storeID %></p>
      <form action="/staff/updateStaff" method="get">
        <input type="hidden" name="staffID" value="<%= staff[i].staffID %>">
        <input type="hidden" name="staffType" value="<%= staff[i].staffType %>">
        <input type="hidden" name="fName" value="<%= staff[i].fName %>">
        <input type="hidden" name="lName" value="<%= staff[i].lName %>">
        <input type="hidden" name="hourlyPay" value="<%= staff[i].hourlyPay %>">
        <input type="hidden" name="storeID" value="<%= staff[i].storeID %>">
        <button type="submit">Update Staff Member</button>
      </form>
      <form action="/staff/delete" method="get">
        <input type="hidden" name="staffID" value="<%= staff[i].staffID %>">
        <input type="hidden" name="staffType" value="<% staff[i].staffType %>">
        <input type="hidden" name="fName" value="<% staff[i].fName %>">
        <input type="hidden" name="lName" value="<% staff[i].lName %>">
        <input type="hidden" name="hourlyPay" value="<% staff[i].hourlyPay %>">
        <input type="hidden" name="storeID" value="<%= staff[i].storeID %>">
        <button type="submit">Delete Staff Member</button>
      </form>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
