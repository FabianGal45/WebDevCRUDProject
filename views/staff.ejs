<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title><%= title %> </title>
  </head>
  <body>
    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">PC World</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/addStore">Store</a>
            <a class="nav-link active" aria-current="page" href="/staff">Staff</a>
            <a class="nav-link" href="/products">Products</a>
            <a class="nav-link" href="/services">Services</a>
          </div>
        </div>
      </div>
    </nav>
    <div class="cell container">
      <div class="cell-ttle">
        <h5 class="text-center">Add/edit staff</h5>
      </div>
    <form class="" action="staff/add" method="post">
      <table class="table">
        <thead>
          <tr>
            <th scope="col"><label for="staffID">Staff ID</label></th>
            <th scope="col"><label for="staffType">Job</label></th>
            <th scope="col"><label for="fName">First name</label></th>
            <th scope="col"><label for="lName">Last name</label></th>
            <th scope="col"><label for="hourlyPay">€ per hour</label></th>
            <th scope="col"><label for="storeID">Store ID</label></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><input type="number" name="staffID"/></td>
            <td><input type="text" name="staffType"></td>
            <td><input type="text" name="fName"></td>
            <td><input type="text" name="lName"></td>
            <td><input type="text" name="hourlyPay"></td>
            <td><input type="number" name="storeID"/></td>
            <td><button class="btn btn-outline-dark"  type="submit">Submit</button></td>
          </tr>
        </tbody>
      </table>
    </form>
    <br>
    <div class="cell-ttle">
      <h5 class="text-center">Staff:</h5>
    </div>
    <% for(var i =0; i < staff.length; i++) { %>
      <table class="table">
        <thead>
          <th scope="col">StaffID:</th>
          <th scope="col">Job:</th>
          <th scope="col">First name:</th>
          <th scope="col">Last name:</th>
          <th scope="col">€ per hour:</th>
          <th scope="col">StoreID:</th>
        </thead>
        <tbody>
          <td><%= staff[i].staffID %></td>
          <td><%= staff[i].staffType %></td>
          <td><%= staff[i].fName %></td>
          <td><%= staff[i].lName %></td>
          <td><%= staff[i].hourlyPay %></td>
          <td><%= staff[i].storeID %></td>
          <form action="/staff/updateStaff" method="get">
            <td><button class="btn btn-outline-dark" type="submit">Update</button></td>
            <input type="hidden" name="staffID" value="<%= staff[i].staffID %>">
            <input type="hidden" name="staffType" value="<%= staff[i].staffType %>">
            <input type="hidden" name="fName" value="<%= staff[i].fName %>">
            <input type="hidden" name="lName" value="<%= staff[i].lName %>">
            <input type="hidden" name="hourlyPay" value="<%= staff[i].hourlyPay %>">
            <input type="hidden" name="storeID" value="<%= staff[i].storeID %>">
          </form>
          <form action="/staff/delete" method="get">
            <td><button class="btn btn-outline-dark" type="submit">Delete</button></td>
            <input type="hidden" name="staffID" value="<%= staff[i].staffID %>">
            <input type="hidden" name="staffType" value="<% staff[i].staffType %>">
            <input type="hidden" name="fName" value="<% staff[i].fName %>">
            <input type="hidden" name="lName" value="<% staff[i].lName %>">
            <input type="hidden" name="hourlyPay" value="<% staff[i].hourlyPay %>">
            <input type="hidden" name="storeID" value="<%= staff[i].storeID %>">
          </form>
        </tbody>
      </table>
    <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
