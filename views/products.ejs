<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">PC World</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link" href="/addStore">Store</a>
            <a class="nav-link" href="/staff">Staff</a>
            <a class="nav-link active" aria-current="page" href="/products">Products</a>
            <a class="nav-link" href="/services">Services</a>
          </div>
        </div>
      </div>
    </nav>

    <h1><%= title %></h1>
    


    <div class="cell container">
      <div class="cell-ttle">
        <h5 class="text-center">Add a product to the list</h5>
      </div>
      <div class="cell-content">
        <% if(error) { %>
          <div class="alert alert-danger" role="alert">
            <p class="error">Error: <%= error %></p>
          </div>
        <% } %>
        <form class="" action="/products/add" method="post">
          <div class="row">
            <div class="col">  
              <label for="item_id" class="inputID">ID: </label>
              <input type="number" name="item_id"/>
    
              <label for="item_name">Name: </label>
              <input type="text" name="item_name" required/>
    
              <label for="item_category">Category: </label>
              <input type="text" name="item_category" required/>
    
              <label for="item_stock">Available stock: </label>
              <input type="number" name="item_stock" required/>
    
              <label for="item_description">Description: </label>
              <input type="text" name="item_description" required/>
    
              <label for="item_price">Price per unit: </label>
              <input type="number" step="0.01" name="item_price" required/>
            </div>
            <div class="col">
              <button type="submit" name="button">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div> 
    <% for( var i = 0; i < products.length; i++ ) { %>
      <br>
      <table>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Category</th>
          <th>stock</th>
          <th>Descripotion</th>
          <th>Price</th>
        </tr>
        <tr>
          <td><%= products[i].itemID %></td>
          <td><%= products[i].itemName %></td>
          <td><%= products[i].category %></td>
          <td><%= products[i].stock %></td>
          <td><%= products[i].itemDescription %></td>
          <td><%= products[i].price %></td>
        </tr>
      </table>
      <form method="post" action="/products/delete">
        <input type="hidden" value="<%= products[i].itemID  %> " name="prduct_id">
        <button type="submit">Delete</button>
      </form>
      <form action="/products/update" method="get">
        <input type="hidden" value="<%= products[i].itemID  %> " name="product_id">
        <button type="submit">Update</button>

      </form>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
